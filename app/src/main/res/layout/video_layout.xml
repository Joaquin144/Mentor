<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    >


        <ImageView
            android:id="@+id/videoIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="4dp"
            app:srcCompat="@drawable/play"

            />
        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the Video"
            android:textAlignment="viewStart"
            android:padding="2dp"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/dark_grey_primary"
            android:fontFamily="@font/noto_sans"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@id/videoIcon"
            app:layout_constraintBottom_toBottomOf="@id/videoIcon"
            app:layout_constraintLeft_toRightOf="@id/videoIcon"

            />








</androidx.constraintlayout.widget.ConstraintLayout>