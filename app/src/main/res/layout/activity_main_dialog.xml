<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.MainDialogActivity">

    <ImageView
        android:id="@+id/close_dialog_main"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:src="@drawable/close"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:focusable="true"
        android:translationZ="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >







    <TextView
        android:id="@+id/well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Welcome to  "
        android:fontFamily="@font/noto_sans"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="24dp"
        android:textSize="24dp"


        />

            <LinearLayout
                android:id="@+id/linear"
                app:layout_constraintTop_toBottomOf="@id/well"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/applog"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center_vertical"

                   />

                <ImageView
                    android:id="@+id/logotxt1"
                    android:layout_width="196dp"
                    android:layout_height="56dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logotxt"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>



    <TextView
        android:id="@+id/maintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="One Stop Solution for all your Skill Development \n problems"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans"
        android:textAlignment="center"



        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/maintxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="learn at your own pace"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:fontFamily="@font/noto_sans"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="36dp"
        android:textSize="16sp"



        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Explore different career opportunities related to any skill you learn"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans"


        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:text="Need any new course or have any suggestions for  existing one ?"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="36dp"
        android:textSize="16sp"
        android:fontFamily="@font/noto_sans"


        />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Launch your Career with MentOR"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="36dp"
        android:textSize="18sp"



        />
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:layout_constraintTop_toBottomOf="@id/txt4"
                app:lottie_rawRes="@raw/final_launch"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_speed="0.6"
                android:padding="2dp"

                    />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>